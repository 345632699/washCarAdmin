          .rotation {
            .rotate(-90deg);
          }
        }
      }

      .cell-bottom {
        margin-bottom: 54rpx;
        min-height: 60rpx;
        flex-wrap: wrap;
        display: flex;
        justify-content: flex-start;

        .no-data {
          width: 100%;
          text-align: center;
          color: #9B9B9B;
        }

        .select-item {
          .centerBox;
          width: 280rpx;
          height: 56rpx;
          margin-top:18rpx;
          border: 2rpx solid #9B9B9B;
          border-radius: 12rpx;
          font-size: 24rpx;
          color: @titleColor;
        }

        &:last-child {

        }

        .item-active {
          background: @normalBtnBgColor  !important;
          border-color: @normalBtnBgColor  !important;
        }
      }
    }
  }

  .btn{
    .longBtn(@normalBtnBgColor,@normalBtnBorderColor);
    line-height: 80rpx;
    height: 80rpx;
    width: 610rpx;
    margin: 60rpx 0;
  }
