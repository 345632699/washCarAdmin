<style lang="less">
@import '../style/common.less';

.page {
  .identify-content {
    .centerBox;
    flex-direction: column;
    margin: 60rpx 24rpx;
    border-radius: 12rpx;
    background: #2E2E2E;
    box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.5);

    .info-cell {
      width: 628rpx;
      margin: 46rpx 36rpx 0;
      padding-bottom: 14rpx;
      .betweenBox;
      align-items: center;
      border-bottom: 2rpx solid #4A4A4A;

      .cell-left {
        .betweenBox;

        .cell-icon {
          width: 65rpx;
          height: 65rpx;
          margin-right: 27rpx;
        }

        .cell-input {
          .title {
            font-size: 32rpx;
            line-height: 44rpx;
            color: @txtColor;
          }

          .placeholder{
            font-size: 24rpx;
            color: #9B9B9B;
          }

          input{
            font-size: 24rpx;
            color: #9B9B9B;
          }
        }
      }

      .cell-right {
        .betweenBox;
        align-items: center;

        .gender {
          .betweenBox;
          flex-direction: column;
          margin: 0 12rpx 0 30rpx;

          image{
            width: 66rpx;
            height: 66rpx;
            margin-bottom: 6rpx;
          }

          .sex{
            font-size: 18rpx;
            line-height: 26rpx;
            color: #9B9B9B;
            text-align: center;
          }
        }
      }
    }

    .column-cell {
      width: 628rpx;
      border-bottom: 2rpx solid #4A4A4A;
      min-height: 114rpx;
      margin: 46rpx 36rpx 0;

      .cell-top {
        border: 0;
        margin: 0;
        padding-bottom: 12rpx;

        .cell-input{
          padding-top: 6rpx;
        }

        .cell-right{
         .centerBox;

          text {
            font-size: 24rpx;
            line-height: 34rpx;
            color: #9B9B9B;
          }

          image {
            width: 28rpx;
